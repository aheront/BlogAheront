= form_for @comment, html: { class: "form form-horizontal comment" } do |f|
  .form-group
    = f.label :author, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :author, class: 'form-control', required: true
    = f.error_span(:author)
  .form-group
    = f.label :content, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :content, class: 'form-control', required: true
    = f.error_span(:content)
  .form-group
    = f.label :post_id, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :post_id, class: 'form-control', required: true
    = f.error_span(:post_id)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), comments_path, :class => 'btn btn-default'
