= form_for [@post.category, @post],  html: { class: "form form-horizontal post" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :content, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :content, class: 'form-control', required: true
    = f.error_span(:content)
  .form-group
    = f.label 'Add files...', class: 'control-label col-lg-2'
    .col-lg-10
      = f.file_field :file
    = f.error_span(:file)
  .form-group
    .col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), path: category_posts_path(@post.category_id), :class => 'btn btn-default'
